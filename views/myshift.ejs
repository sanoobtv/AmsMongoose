<!doctype html>
<html>
<head>

    <title>AMS Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="bootstrap.min.css">
     <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
     <link rel="stylesheet" href="w3.css">
    <link href = "jquery-ui.css" rel = "stylesheet">
    <link href = "ViewbyEmpTable.css" rel = "stylesheet">
     <script src = "jquery-1.10.2.js"></script>
     <script src = "jquery-ui.js"></script>
     <script src="script.js"></script>

  </script>
</head>
<body>

  <!-- nAVIGATION Div-->
  <div class="w3-sidebar w3-bar-block w3-border-right w3-animate-left" style="display:none" id="mySidebar">
    <button onclick="w3_close()" class="w3-bar-item w3-large w ">Close &times;</button>
    <a href="/profile" class="w3-bar-item w3-button w3-light-grey ">Home</a>
    <div class="w3-dropdown-hover">
      <button class="w3-button w3-block w3-left-align" onclick="myAccFunc()"> View <i class="fa fa-caret-down"></i>
    </button>
        <div id="demoAcc" class="w3-hide w3-white w3-card-2">
            <a href="/viewall" class="w3-bar-item w3-button">View Roster</a>
            <a href="#" class="w3-bar-item w3-button">View By Shift</a>
        </div>
      </div>
      <div class="w3-dropdown-hover">
        <button class="w3-button w3-block w3-left-align" onclick="myAccFunc1()"> My Shift <i class="fa fa-caret-down"></i>
      </button>
          <div id="demoAcc1" class="w3-hide w3-white w3-card-2">
              <a href="/myshift" class="w3-bar-item w3-button">Montly</a>
              <a href="#" class="w3-bar-item w3-button">Swap</a>
          </div></div>
    <a href="/logout" class="w3-bar-item w3-button ">Logout</a>
  </div>
  <button class="w3-button w3-black w3-large" onclick="w3_open()">â˜°</button>
    <div class=" text-center"><h1><span class="fa fa-anchor"></span>My Shifts</h1></div>
<div class="text-centre w3-container w3-mobile">
        <form action="/myshiftdates" method="post" class="myshiftdates">
          <select class="selectStaff w3-dropdown-click" name="selectStaff">
          <% if ( resultSet ) {%>
              <% for(var i=0 ; i < resultSet.length; i++){%>
                <option name="<%= resultSet[i] %>" value="<%= resultSet[i] %>"><%=resultSet[i]%></option>
                <% }} %>
              </select>
              <p>Enter  Start Date: <input type = "text" id = "datepicker-13" name="startDate" required=""></p>
              <p>Enter  End Date: <input type = "text" id = "datepicker-14" name="endDate" required="" ></p>

              <button class="ui-btn " type="submit">Submit</button>
            </form>
</div>

<% if(shiftdata) { %>
  <table class="OneEmp ">
  	<thead>
  	<tr>
  		<th >Date</th>
  		<th >Shift</th>
  	</tr>
  	</thead>
  	<tbody>
      <%  for(var i=0 ; i < shiftdata.length; i++)  { %>
      <tr>
  		<td><%= shiftdata[i].date%></td>
      <td><%=  shiftdata[i].staff[0].shift %></td>
    </tr>
    <% }} %>
  	</tbody>
  </table>


</body>

</html>
