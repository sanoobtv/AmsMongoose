<!doctype html>
<html>
<head>

    <title>AMS Home</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="w3.css">
<link href="jquery-ui.css" rel="stylesheet">
<link href="ViewbyEmpTable.css" rel="stylesheet">
<script src="jquery-1.10.2.js"></script>
<script src="jquery-ui.js"></script>
<script src="script.js"></script>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>


</head>
<body>

  <!-- nAVIGATION Div-->
<% include menu.html %>
<div class=" text-center"><h2><span class="fa fa-anchor"></span>My Shifts</h2></div>
<div class="w3-container w3-mobile text-center w3-blue w3-padding">
        <form action="/myshiftdates" method="post" class="myshiftdates">
              <p>Enter Start Date<input type = "date" id = "datepicker13" name="startDate" required=""></p>
              <p>Enter End Date<input type = "date" id = "datepicker14" name="endDate" required="" ></p>

              <button class="w3-button w3-bar w3-indigo" type="submit">Submit</button>
            </form>
</div>
<%if(message.length<0) { %>
<div class="w3-panel w3-red"><p><%=message%></p></div>
  <% } %>
<% if(shiftdata) { %>
  <table class="OneEmp ">
  	<thead>
  	<tr>
  		<th >Date</th>
  		<th >Shift</th>
  	</tr>
  	</thead>
  	<tbody>
      <%  for(var i=0 ; i < shiftdata.length; i++)  { %>
      <tr>
  		<td><%= shiftdata[i].date%></td>
      <td><%=  shiftdata[i].staff[0].shift %></td>
    </tr>
    <% }} %>
  	</tbody>
  </table>


</body>

</html>
